<!-- Views/MessageBoxWindow.axaml -->
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="SeatRandomizer.Views.MessageBoxWindow"
        Title="MessageBox"
        Width="300"
        Height="150"
        WindowStartupLocation="CenterOwner"
        CanResize="False">
	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<TextBlock Name="MessageTextBlock" Text="Message"
                   VerticalAlignment="Center"
                   TextWrapping="Wrap"
                   Margin="0,0,0,10"/>
		<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
			<Button Name="YesButton" Content="Yes" Width="70" Click="YesButton_Click"/>
			<Button Name="NoButton" Content="No" Width="70" Click="NoButton_Click"/>
		</StackPanel>
	</Grid>
</Window>